<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/setchild_background">

    <!-- Homepage ImageButton -->
    <ImageButton
        android:id="@+id/setTask_BTN_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home_icon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


        <!-- Title -->
        <TextView
            android:id="@+id/allTasks_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Tasks"
            android:textSize="30sp"
            android:fontFamily="@font/dosis"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <!-- Task Name -->
        <EditText
            android:id="@+id/setTask_TXT_taskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis"
            android:hint="Task Name"/>

        <!-- Task Description -->
        <EditText
            android:id="@+id/setTask_TXT_taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis"
            android:hint="Task Description"/>

        <!-- Day and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Day -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:fontFamily="@font/dosis"
                    android:layout_gravity="center_horizontal"/>

                <Spinner
                    android:id="@+id/setTask_SPNR_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Time Hour -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hour"
                    android:fontFamily="@font/dosis"
                    android:layout_gravity="center_horizontal"/>

                <Spinner
                    android:id="@+id/setTask_SPNR_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Time Minute -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minute"
                    android:fontFamily="@font/dosis"
                    android:layout_gravity="center_horizontal"/>

                <Spinner
                    android:id="@+id/setTask_SPNR_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dosis"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Select Child -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Child:"
            android:fontFamily="@font/dosis"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/setTask_SPNR_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis"
            />

        <!-- Task Coins -->
        <EditText
            android:id="@+id/setTask_TXT_coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:fontFamily="@font/dosis"
            android:hint="Coins"/>

    <!-- Create Task -->
    <Button
        android:id="@+id/setTask_BTN_createTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:fontFamily="@font/dosis"
        />


</LinearLayout>
